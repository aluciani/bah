//Converts an int into a cpstring.
intToStr(i int) cpstring {
    if i == 0 {
        return "0"
    }

    s = []char

    subZero = i < 0

    if subZero == true {
        i = 0-i
    }

    for i != 0, i = i / 10 {
        conv = i % 10
        conv = conv + 48
        s[len(s)] = <char>conv
    }

    if subZero == true {
        s[len(s)] = '-'
    }
    ls = len(s)
    i=0; for i < ls/2, i++ {
        ii = ls-i-1
        osi = s[i]
        s[i] = s[ii]
        s[ii] = osi
    }

    s[len(s)] = <char>0

    return arrAsStr(s)
}

